{
  "debug": true,
  "tagFormat": "sdk.core-${version}",
  "branches": [ "main" ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec", 
      {
        "prepareCmd": "bump2version --allow-dirty --current-version ${lastRelease.version} --new-version ${nextRelease.version} patch",
      }
    ],
    [
      "@semantic-release/git", 
      {
        "assets" : [ "Sdk/Sdk.Core/CHANGELOG.md" ],
        "message": "chore(release): ${nextRelease.version} release notes\n\n${nextRelease.notes} [skip ci]"
      }
    ],
    "@semantic-release/github"
  ]
}